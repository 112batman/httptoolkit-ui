{
    "compilerOptions": {
        "target": "es2015",
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "./dist",
        "sourceMap": true,

        "jsx": "react",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,

        "strict": true,

        "lib": [
            "dom",
            "es2017",
            "scripthost",
            "webworker"
        ],

        // Limit the global types included, to fix https://github.com/DefinitelyTyped/DefinitelyTyped/issues/33015
        "types": [
          "node",
          "webpack-dev-server",
          "mocha",
          "chai"
        ],

        "plugins": [
          {
            "name": "typescript-styled-plugin"
          }
        ]
    },
    "compileOnSave": true,
    "buildOnSave": true,
    "include": [
        "custom-typings/*.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}
