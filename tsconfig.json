{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "sourceMap": true,

        "jsx": "react",
        "experimentalDecorators": true,

        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "strictNullChecks": true,
        // ^^ All this instead of `strict` because strictFunctionTypes
        // breaks the current electron typings (at 1.7.9)

        "lib": [
            "dom",
            "es2015",
            "scripthost"
        ],

        "plugins": [
          {
            "name": "typescript-styled-plugin"
          }
        ]
    },
    "compileOnSave": true,
    "buildOnSave": true,
    "include": [
        "custom-typings/*.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx"
    ]
}
